    :javascript
      var WebFontConfig = {
        google: {
          families: ['Lobster', 'The Girl Next Door', 'McLaren']
        }
      }
    %script{src: '//cdnjs.cloudflare.com/ajax/libs/webfont/1.0.31/webfont.js', async: true}
    %link{href:'/css/app.css', type: 'text/css', rel: 'stylesheet'}

